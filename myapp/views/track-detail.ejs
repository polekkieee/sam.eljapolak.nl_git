<%- include('partials/header') %>

<div class="container">
  <nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/music">Music</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= track.title %></li>
    </ol>
  </nav>

  <div class="row mt-4">
    <div class="col-lg-8">
      <h1 class="mb-3"><%= track.title %></h1>
      
      <div class="d-flex mb-4">
        <span class="badge bg-secondary me-2"><%= track.genre %></span>
        <span class="text-muted">Released: <%= new Date(track.release_date).toLocaleDateString() %></span>
      </div>
      
      <% if (track.soundcloud_embed_code) { %>
        <div class="soundcloud-embed mb-4">
          <%- track.soundcloud_embed_code %>
        </div>
      <% } %>
      
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">About This Track</h5>
          <p class="card-text"><%= track.description %></p>
        </div>
      </div>
      
      <% if (!track.soundcloud_embed_code && track.soundcloud_url) { %>
        <a href="<%= track.soundcloud_url %>" class="btn btn-primary" target="_blank">
          <i class="bi bi-soundcloud"></i> Listen on SoundCloud
        </a>
      <% } %>
    </div>
    
    <div class="col-lg-4">
      <div class="card">
        <div class="card-header">
          Other Tracks
        </div>
        <ul class="list-group list-group-flush" id="other-tracks">
          <!-- This would be populated from JavaScript or server-side -->
          <li class="list-group-item">Loading other tracks...</li>
        </ul>
      </div>
      
      <div class="mt-4">
        <a href="/music" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left"></i> Back to All Tracks
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  // Optional: Fetch other tracks via AJAX
  window.addEventListener('DOMContentLoaded', async () => {
    try {
      const response = await fetch('/api/tracks?limit=5&exclude=<%= track.id %>');
      const tracks = await response.json();
      
      const otherTracksList = document.getElementById('other-tracks');
      otherTracksList.innerHTML = '';
      
      if (tracks.length === 0) {
        otherTracksList.innerHTML = '<li class="list-group-item">No other tracks available</li>';
        return;
      }
      
      tracks.forEach(track => {
        otherTracksList.innerHTML += `
          <li class="list-group-item">
            <a href="/music/${track.id}">${track.title}</a>
            <small class="text-muted d-block">${track.genre}</small>
          </li>
        `;
      });
    } catch (error) {
      console.error('Error fetching other tracks:', error);
      document.getElementById('other-tracks').innerHTML = 
        '<li class="list-group-item">Failed to load other tracks</li>';
    }
  });
</script>

<%- include('partials/footer') %>