<%- include('partials/header') %>

<section class="page-header bg-light py-4 mb-4">
  <div class="container">
    <h1>Contact Me</h1>
    <p class="lead">Get in touch for collaborations, bookings, or just to say hello.</p>
  </div>
</section>

<section class="contact-content">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mb-4">
        <h2>Send a Message</h2>
        
        <% if (success) { %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
        <% } %>
        
        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        
        <form action="/contact" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Name *</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          
          <div class="mb-3">
            <label for="email" class="form-label">Email *</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          
          <div class="mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" class="form-control" id="subject" name="subject">
          </div>
          
          <div class="mb-3">
            <label for="message" class="form-label">Message *</label>
            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
      
      <div class="col-lg-6">
        <h2>Connect With Me</h2>
        <p>Feel free to reach out through any of these platforms:</p>
        
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Social Media</h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <i class="bi bi-instagram"></i>
                <a href="#" target="_blank" class="ms-2">Instagram</a>
              </li>
              <li class="mb-2">
                <i class="bi bi-facebook"></i>
                <a href="#" target="_blank" class="ms-2">Facebook</a>
              </li>
              <li class="mb-2">
                <i class="bi bi-twitter"></i>
                <a href="#" target="_blank" class="ms-2">Twitter</a>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Music Platforms</h5>
            <ul class="list-unstyled">
              <li class="mb-2">
                <img src="public/images/soundcloud.svg" class="bi bi-soundcloud">
                <a href="#" target="_blank" class="ms-2">SoundCloud</a>
              </li>
              <li class="mb-2">
                <i class="bi bi-spotify"></i>
                <a href="#" target="_blank" class="ms-2">Spotify</a>
              </li>
              <li class="mb-2">
                <i class="bi bi-youtube"></i>
                <a href="#" target="_blank" class="ms-2">YouTube</a>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">For Business Inquiries</h5>
            <p class="mb-2">
              <i class="bi bi-envelope"></i>
              <a href="mailto:contact@example.com" class="ms-2">contact@example.com</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>