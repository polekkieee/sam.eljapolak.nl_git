<%- include('partials/header') %>

<section class="hero bg-dark text-white py-5 mb-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="display-4">Welcome to My Music Portfolio</h1>
        <p class="lead">Explore my musical journey, listen to my tracks, and get in touch for collaborations.</p>
        <a href="/music" class="btn btn-outline-light btn-lg">Explore My Music</a>
      </div>
      <div class="col-md-4">
        <img src="/images/hero-image.jpg" alt="Music Portfolio" class="img-fluid rounded">
      </div>
    </div>
  </div>
</section>

<section class="featured-tracks mb-5">
  <div class="container">
    <h2 class="text-center mb-4">Featured Tracks</h2>
    
    <% if (featuredTracks && featuredTracks.length > 0) { %>
      <div class="row">
        <% featuredTracks.forEach(track => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title"><%= track.title %></h5>
                <p class="card-text text-muted"><%= track.genre %></p>
                <p class="card-text"><%= track.description %></p>
                <% if (track.soundcloud_embed_code) { %>
                  <div class="soundcloud-embed mb-3">
                    <%- track.soundcloud_embed_code %>
                  </div>
                <% } else { %>
                  <a href="<%= track.soundcloud_url %>" class="btn btn-primary" target="_blank">Listen on SoundCloud</a>
                <% } %>
              </div>
              <div class="card-footer text-muted">
                Released: <%= new Date(track.release_date).toLocaleDateString() %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="text-center mt-4">
        <a href="/music" class="btn btn-outline-dark">View All Tracks</a>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        No featured tracks available at the moment. Check back soon!
      </div>
    <% } %>
  </div>
</section>

<section class="about-preview bg-light py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h2>About Me</h2>
        <p>I'm a passionate musician dedicated to creating unique sounds and memorable experiences through music.</p>
        <p>With a background in various genres and a love for experimentation, I strive to push boundaries and create authentic musical expressions.</p>
        <a href="/about" class="btn btn-outline-dark">Learn More</a>
      </div>
      <div class="col-md-6">
        <img src="/images/about-preview.jpg" alt="About Me" class="img-fluid rounded">
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>